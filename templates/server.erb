upstream <%= project_name %>_server {
  server unix:/home/<%= project_name %>/htdocs/shared/sockets/unicorn.sock fail_timeout=0;
}

# Server configuration
server {
  listen <%= server_ip %>:80;
  server_name <%= domain_name %>;
  client_max_body_size 20M;
  
  keepalive_timeout 5;
  root /home/<%= project_name %>/htdocs/current/public;

  try_files $uri/index.html $uri.html $uri @<%= project_name %>_app;
  
  location @<%= project_name %>_app {
    proxy_pass http://<%= project_name %>_server;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
  }
  
  error_page 500 502 503 504 /500.html;

  location = /500.html {
    root /home/<%= project_name %>/htdocs/current/public;
  }
}